<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <LangVersion>12</LangVersion>
        <AssemblyVersion>0.0.2.0</AssemblyVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <Content Update="appsettings.Development.json">
            <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </Content>
        <Content Update="appsettings.Test.json">
            <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.6"/>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2"/>
        <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="7.6.2"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SafariDigital.Core\SafariDigital.Core.csproj"/>
        <ProjectReference Include="..\SafariDigital.Data\SafariDigital.Data.csproj"/>
        <ProjectReference Include="..\SafariDigital.Services\SafariDigital.Services.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="wwwroot\" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="Digital.Net.Core">
            <HintPath>..\Digital.Net.Core.dll</HintPath>
        </Reference>
        <Reference Include="Digital.Net.Entities">
            <HintPath>..\Digital.Net.Entities.dll</HintPath>
        </Reference>
        <Reference Include="Digital.Net.Mvd">
            <HintPath>..\Digital.Net.Mvc.dll</HintPath>
        </Reference>
    </ItemGroup>

</Project>
