{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "CorsAllowedOrigins": [
        "http://localhost:3000"
    ],
    "Jwt": {
        "Secret": "superLongSecretThatNeedsToBeSuperLongAndSecure",
        "Issuer": "http://localhost:5099",
        "Audience": "http://localhost:3000",
        "CookieName": "SafariToken",
        "RefreshExpiration": 1800000,
        "BearerExpiration": 300000,
        "MaxTokenAllowed": 10
    },
    "Security": {
        "MaxLoginAttempts": 5,
        "MaxLoginWindow": 900000,
        "MaxRequestAllowed": 1000,
        "MaxRequestWindow": 1000,
        "PasswordRegex": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[^\\da-zA-Z]).{12,128}$"
    }
}