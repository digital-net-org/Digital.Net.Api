{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "SafariDigital.Api Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "buildapi",
      "program": "${workspaceFolder}/SafariDigital.Api/bin/Debug/net8.0/SafariDigital.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/SafariDigital.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https://\\S+:([0-9]+)",
        "uriFormat": "https://localhost:%s/swagger/index.html"
      },
      "internalConsoleOptions": "openOnSessionStart",
      "launchBrowser": {
        "enabled": false,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "SafariDigital.Api Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test",
      "program": "${workspaceFolder}/SafariDigital.Api/bin/Debug/net8.0/SafariDigital.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/SafariDigital.Api",
      "stopAtEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Test"
      }
    }
  ]
}
